<?import javafx.scene.layout.GridPane?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.text.Text?>

<GridPane
xmlns:fx="http://javafx.com/fxml" vgap="5" hgap="5">
<Text text="Probability of first channel: "
      GridPane.rowIndex="0"
      GridPane.columnIndex="1"/>
<TextField fx:id="txtFldFirstChannelProbability"
           GridPane.rowIndex="0"
           GridPane.columnIndex="2"/>

<Text text="Probability of second channel: "
      GridPane.rowIndex="1"
      GridPane.columnIndex="1"/>
<TextField fx:id="txtFldSecondChannelProbability"
           GridPane.rowIndex="1"
           GridPane.columnIndex="2"/>

<Text text="Number of tacts: "
      GridPane.rowIndex="2"
      GridPane.columnIndex="1"/>
<TextField fx:id="txtFldTactNumber"
           GridPane.rowIndex="2"
           GridPane.columnIndex="2"/>

<Button fx:id="btnCalculate"
        text="CALCULATE"
        GridPane.columnIndex="2"
        GridPane.columnSpan="2"
        GridPane.rowIndex="4"
        alignment="BOTTOM_RIGHT"/>

<Text text="Q: "
      GridPane.rowIndex="5"
      GridPane.columnIndex="1"/>
<Text fx:id="txtQ"
      GridPane.rowIndex="5"
      GridPane.columnIndex="2"/>

<Text text="L: "
      GridPane.rowIndex="6"
      GridPane.columnIndex="1"/>
<Text fx:id="txtL"
      GridPane.rowIndex="6"
      GridPane.columnIndex="2"/>
</GridPane>